{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekends",
    "group:allNonMajor"
  ],
  "labels": [
    "dependencies"
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "updatePinnedDependencies": true,
  "automerge": true,
  "automergeType": "branch",
  "dependencyDashboard": false,
  "prCreation": "not-pending",
  "constraints": {
    "pnpm": "8"
  },
  "packageRules": [
    {
      "depTypeList": [
        "peerDependencies"
      ],
      "enabled": false
    }
  ]
}